# Database
# Para desarrollo local con PostgreSQL:
DATABASE_URL=postgres://postgres:password@localhost:5432/medusa

# Para desarrollo local con SQLite (más fácil):
# DATABASE_URL=sqlite:///./medusa.db

# Redis (opcional para desarrollo local)
# REDIS_URL=redis://localhost:6379

# JWT and Cookie secrets (¡GENERAR VALORES ÚNICOS PARA PRODUCCIÓN!)
JWT_SECRET=supersecretjwtkey123456789
COOKIE_SECRET=supersecretcookiekey123456789

# Backend URL
BACKEND_PUBLIC_URL=http://localhost:9000

# CORS (opcional)
# ADMIN_CORS=http://localhost:7001,http://localhost:7000
# AUTH_CORS=http://localhost:7001,http://localhost:7000
# STORE_CORS=http://localhost:8000,http://localhost:3000

# Email (opcional - usar Resend o SendGrid)
# RESEND_API_KEY=your_resend_api_key
# RESEND_FROM_EMAIL=noreply@yourdomain.com

# Payment (opcional - Stripe)
# STRIPE_API_KEY=your_stripe_api_key
# STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# File Storage (opcional - MinIO)
# MINIO_ENDPOINT=your_minio_endpoint
# MINIO_ACCESS_KEY=your_minio_access_key
# MINIO_SECRET_KEY=your_minio_secret_key
# MINIO_BUCKET=medusa-media

# Search (opcional - MeiliSearch)
# MEILISEARCH_HOST=your_meilisearch_host
# MEILISEARCH_ADMIN_KEY=your_meilisearch_admin_key

# Worker mode
MEDUSA_WORKER_MODE=shared

# Disable admin (opcional)
# MEDUSA_DISABLE_ADMIN=false
